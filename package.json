{
   "name": "appai",
   "module": "index.ts",
   "type": "module",
   "private": true,
   "scripts": {
      "dev": "concurrently \"cd packages/server && bun run dev\" \"cd packages/client && bun run dev\"",
      "dev:server": "cd packages/server && bun run dev",
      "dev:client": "cd packages/client && bun run dev",
      "build": "cd packages/client && bun run build",
      "build:all": "bun run build && cd packages/server && bun run build",
      "start": "cd packages/server && bun run start",
      "format": "prettier --write .",
      "prepare": "husky"
   },
   "devDependencies": {
      "@types/bun": "latest",
      "concurrently": "^9.2.1",
      "husky": "^9.1.7",
      "lint-staged": "^16.1.5",
      "prettier": "^3.6.2"
   },
   "peerDependencies": {
      "typescript": "^5"
   },
   "workspaces": [
      "packages/*"
   ]
}
